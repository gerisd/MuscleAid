<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/ExerciseRoutine"
    android:layout_marginTop="4dp"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
    android:id="@+id/ExerciseRoutine_RowCardView">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/ExerciseRoutineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routine Title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/ExerciseRoutineSplit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routine Split"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>